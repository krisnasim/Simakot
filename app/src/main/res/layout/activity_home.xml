<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simakot.simakot.HomeActivity"
    android:background="@drawable/bg_home">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar_profile"
        android:layout_marginLeft="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toLeftOf="@+id/full_name_label"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/full_name_label"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="80dp"
        android:text="AIPTU MUKIDI, SH"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nrp_num_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:text="72050584"
        android:textColor="@color/md_white_1000"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name_label" />

    <TextView
        android:id="@+id/target_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/nrp_num_label"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.172" />

    <TextView
        android:id="@+id/sisa_target_label"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="Sisa Target"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/target_label"
        app:layout_constraintTop_toBottomOf="@+id/nrp_num_label" />

    <TextView
        android:id="@+id/penindakan_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:text="Jumlah Penindakan"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintLeft_toRightOf="@+id/sisa_target_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nrp_num_label" />

    <TextView
        android:id="@+id/target_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="99"
        android:textColor="@color/md_white_1000"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_label" />

    <TextView
        android:id="@+id/sisa_target_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="99"
        android:textColor="@color/md_white_1000"
        android:textSize="45sp"
        app:layout_constraintTop_toBottomOf="@+id/sisa_target_label"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.48" />

    <TextView
        android:id="@+id/penindakan_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="99"
        android:textColor="@color/md_white_1000"
        android:textSize="45sp"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintLeft_toRightOf="@+id/sisa_target_number_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penindakan_label" />

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="250dp"
        android:background="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_button" />
</android.support.constraint.ConstraintLayout>
