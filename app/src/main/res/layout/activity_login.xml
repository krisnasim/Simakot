<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simakot.simakot.LoginActivity"
    android:background="@drawable/bg_login">

    <ImageView
        android:id="@+id/login_bg_image"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="261dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_shape" />

    <EditText
        android:id="@+id/nrp_login_input"
        android:layout_width="172dp"
        android:layout_height="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/md_white_1000"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Masukan NRP"
        android:inputType="number"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="@+id/login_bg_image"
        app:layout_constraintRight_toRightOf="@+id/login_bg_image"
        app:layout_constraintTop_toTopOf="@+id/login_bg_image" />

    <EditText
        android:id="@+id/pwd_input"
        android:layout_width="172dp"
        android:layout_height="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:background="@color/md_white_1000"
        android:elevation="5dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintLeft_toLeftOf="@+id/login_bg_image"
        app:layout_constraintRight_toRightOf="@+id/login_bg_image"
        app:layout_constraintTop_toBottomOf="@+id/nrp_login_input" />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="@+id/login_bg_image"
        app:layout_constraintRight_toRightOf="@+id/login_bg_image"
        app:layout_constraintTop_toBottomOf="@+id/pwd_input"
        app:srcCompat="@drawable/login_button" />

    <ImageView
        android:id="@+id/nrp_icon"
        android:layout_width="24dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/icon_nrp_login"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/login_bg_image"
        app:layout_constraintRight_toLeftOf="@+id/nrp_login_input"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/login_bg_image"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/pwd_icon"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/login_bg_image"
        app:layout_constraintRight_toLeftOf="@+id/pwd_input"
        app:layout_constraintTop_toBottomOf="@+id/nrp_icon"
        app:srcCompat="@drawable/icon_pwd_login" />

</android.support.constraint.ConstraintLayout>
